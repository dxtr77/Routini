<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- Header with title, filter, and add button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_title"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_task_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 tasks"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/widget_filter_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_arrow_drop_down_white_24"
            android:contentDescription="@string/widget_filter_desc" />

        <ImageView
            android:id="@+id/widget_add_task_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/outline_add_white_24"
            android:contentDescription="@string/add_task_action" />
    </LinearLayout>

    <!-- Filter label and progress indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/widget_filter_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_filter_today"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/widget_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#99FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/widget_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#33FFFFFF" />
    </LinearLayout>

    <!-- Task List -->
    <ListView
        android:id="@+id/widget_task_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:scrollbars="none" />

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/widget_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¨"
            android:textSize="40sp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_no_tasks"
            android:textColor="#88FFFFFF"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
